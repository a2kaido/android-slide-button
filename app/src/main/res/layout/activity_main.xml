        tools:layout_editor_absoluteY="223dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/paytext"
            android:paddingStart="36dp"
            android:text="UNLOCK"
            android:textSize="24sp"
